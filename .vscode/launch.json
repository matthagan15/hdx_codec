        "name": "Cargo test",
        "cargo": {
            "args": [
                "test",
                "--no-run",
                "--lib"
            ]
        },
        "args": []
    },
    {
        "name": "(OSX) Launch",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceRoot}/target/debug/hdxplorer",
        "args": [],
        "cwd": "${workspaceRoot}",
    },
    {
        "name": "Python: Current File",
        "type": "python",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal",
        "justMyCode": false
    }
    ]
